{
  "name": "vanilla-schema-validator",
  "version": "2.0.4",
  "description": "`vanilla-schema-validator` is yet another schema validator which is not based on framework.",
  "main": "index.mjs",
  "type": "module",
  "exports": {
    "./common.js": {
      "default": "./index.cjs"
    },
    ".": {
      "import": "./index.mjs",
      "require": "./index.cjs"
    }
  },
  "scripts": {
    "test-esm": "node --test-reporter='spec' --watch index.test.mjs",
    "test-cjs": "node --test-reporter='spec' --watch index.test.cjs",
    "test-simple": "npm run make; npm run test-cs",
    "test": "npm run make; npm run test-esm; # npm run test-cjs",
    "make": "node ./make.js"
  },
  "files": [
    "README.md",
    "index.cjs",
    "index.mjs",
    "package.json"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "mjs",
      "cjs",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/*.test.[cm]js"
    ],
    "verbose": true
  },
  "author": {
    "name": "Atsushi Oka",
    "url": "https://github.com/a-oka-z/vanilla-schema-validator.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a-oka-z/vanilla-schema-validator.js"
  },
  "license": "ISC",
  "devDependencies": {
    "sqlmacro": "^0.1.0"
  }
}
